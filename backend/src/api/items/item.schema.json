{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "title": "Items",
    "description": "The Items",
    "required": [
        "user_id",
        "name",
        "item_type_id",
        "company_id"
    ],
    "additionalProperties": false,
    "properties": {
        "id": {
            "$id": "#/properties/id",
            "type": "integer",
            "title": "The database ID of the Items."
        },
        "user_id": {
            "$id": "#/properties/user_id",
            "type": "integer",
            "title": "The id of the user."
        },
        "name": {
            "$id": "#/properties/name",
            "type": "string",
            "title": "The name of item."
        },
        "item_type_id": {
            "$id": "#/properties/item_type_id",
            "type": "number",
            "title": "The type of item."
        },
        "company_id": {
            "$id": "#/properties/company_id",
            "type": "number",
            "title": "The company of item."
        },
        "description": {
            "$id": "#/properties/description",
            "type": "string",
            "title": "The description of an item."
        },
        "size_id": {
            "$id": "#/properties/size_id",
            "type": "number",
            "title": "The size."
        },
        "sku": {
            "$id": "#/properties/sku",
            "type": "string",
            "title": "The sku."
        },
        "sparks_joy": {
            "$id": "#/properties/sparks_joy",
            "type": "boolean",
            "title": "The items sparks joy or not ."
        }
    }
}